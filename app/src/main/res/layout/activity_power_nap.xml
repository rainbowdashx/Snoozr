<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".PowerNap">


    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/MinutePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/HourPicker"
        android:layout_marginEnd="79dp"
        app:np_dividerColor="@color/colorPrimary"
        app:np_formatter=""
        app:np_height="180dp"
        app:np_max="59"
        app:np_min="0"
        app:np_selectedTextColor="@color/colorAccent"
        app:np_selectedTextSize="20dp"
        app:np_textColor="@color/colorPrimary"
        app:np_textSize="18dp"
        app:np_typeface="sans-serif-light"
        app:np_value="20"
        app:np_width="64dp" />


    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/HourPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="149dp"
        android:layout_toStartOf="@+id/btnPowerNap"
        app:np_dividerColor="@color/colorPrimary"
        app:np_formatter=""
        app:np_height="180dp"
        app:np_max="12"
        app:np_min="0"
        app:np_selectedTextColor="@color/colorAccent"
        app:np_selectedTextSize="20dp"
        app:np_textColor="@color/colorWhite"
        app:np_textSize="18dp"
        app:np_typeface="sans-serif-light"
        app:np_value="0"
        app:np_width="64dp" />

    <Button
        android:id="@+id/btnPowerNap"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:textColor="#000000"
        android:layout_width="138dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="84dp"
        android:onClick="NapWakemeUp"
        android:text="@string/start_nap"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="286dp" />

    <Button
        android:id="@+id/btnPinkNoise"
        android:textColor="#000000"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/HourPicker"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"
        android:onClick="PlayPinkNoise"
        android:text="@string/pinknoise" />

    <Button
        android:id="@+id/btnStopPinkNoise"
        android:textColor="#000000"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnPinkNoise"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="38dp"
        android:onClick="StopPinkNoise"
        android:text="@string/stop_pinknoise" />

    <TextView
        android:id="@+id/txtHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/HourPicker"
        android:textColor="@color/colorPrimary"
        android:text="@string/hours" />

    <TextView
        android:id="@+id/txtMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="-79dp"
        android:layout_toEndOf="@+id/MinutePicker"
        android:textColor="@color/colorPrimary"
        android:text="@string/minutes" />

</RelativeLayout>