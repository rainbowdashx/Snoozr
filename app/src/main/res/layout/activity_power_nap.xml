<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".PowerNap">


    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/MinutePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/HourPicker"
        android:layout_marginStart="60dp"
        app:np_dividerColor="@color/colorPrimary"
        app:np_formatter=""
        app:np_height="180dp"
        app:np_max="59"
        app:np_min="0"
        app:np_selectedTextColor="@color/colorPrimary"
        app:np_selectedTextSize="20dp"
        app:np_textColor="@color/colorPrimary"
        app:np_textSize="18dp"
        app:np_typeface="sans-serif-light"
        app:np_value="3"
        app:np_width="64dp" />


    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/HourPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="72dp"
        android:layout_marginTop="144dp"
        app:np_dividerColor="@color/colorAccent"
        app:np_formatter=""
        app:np_height="180dp"
        app:np_max="59"
        app:np_min="0"
        app:np_selectedTextColor="@color/colorAccent"
        app:np_selectedTextSize="20dp"
        app:np_textColor="@color/colorWhite"
        app:np_textSize="18dp"
        app:np_typeface="sans-serif-light"
        app:np_value="3"
        app:np_width="64dp" />

    <Button
        android:id="@+id/btnPowerNap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wake me up in 20min"
        android:onClick="NapWakemeUp"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="286dp" />

    <Button
        android:id="@+id/btnPinkNoise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="69dp"
        android:onClick="PlayPinkNoise"
        android:text="PinkNoise" />

    <Button
        android:id="@+id/btnStopPinkNoise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnPinkNoise"
        android:layout_centerHorizontal="true"
        android:onClick="StopPinkNoise"
        android:text="Stop PinkNoise" />

</RelativeLayout>